# Local development defaults
DATABASE_URL=sqlite:nag.db?mode=rwc
SERVER_PORT=3000
RUST_LOG=nag_server=debug,tower_http=debug
JSON_LOGS=false

# Local OIDC provider in dev/oidc-provider
AUTH_ENABLED=true
OIDC_ISSUER_URL=http://localhost:9000
OIDC_CLIENT_ID=nag-dev
OIDC_CLIENT_SECRET=nag-dev-secret
OIDC_REDIRECT_URL=http://localhost:3000/auth/callback

# Keep notifications off by default in shared dev setup.
# Enable and set Telegram values below when you want to test delivery.
NOTIFICATIONS_ENABLED=false
NOTIFICATION_POLL_INTERVAL_SECONDS=60
NOTIFICATION_DISPATCH_INTERVAL_SECONDS=15
NOTIFICATION_MAX_ATTEMPTS=5
NOTIFICATION_BATCH_SIZE=50

